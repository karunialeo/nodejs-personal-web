<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | Karunia Leo Gultom</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Developer CSS -->
    <link rel="stylesheet" href="../public/css/main.css" />
    <link rel="stylesheet" href="../public/css/nav.css" />

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      href="../public/img/favicon.png"
      type="image/png"
    />

    <script src="../public/js/TweenMax.min.js"></script>
    <script src="../public/js/TimelineMax.min.js"></script>
  </head>
  <body>
    <div class="body-container container-fluid">
      <!-- Navbar Start -->

      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container">
          <a class="navbar-brand text-var-white h1" href="/">Karunia Leo Gultom</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
          >
            <div class="burger">
              <div class="line-1"></div>
              <div class="line-2"></div>
              <div class="line-3"></div>
            </div>
          </button>
          <div
            class="offcanvas offcanvas-start bg-blue-transparent"
            tabindex="-1"
            id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel"
          >
            <div class="offcanvas-header">
              <h5
                class="offcanvas-title text-var-white"
                id="offcanvasNavbarLabel"
              >Menu</h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1">
                {{#if isLogin}}
                <li class="nav-item ps-lg-4 py-2">
                  <span class="nav-link text-var-white">Hello, {{user.name}}!</span>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/logout">Logout</a>
                </li>
                {{else}}
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/register">Register</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/login">Login</a>
                </li>
                {{/if}}
                <li class="nav-item ps-lg-4 py-2">
                  <a
                    class="nav-link text-var-white active"
                    aria-current="page"
                    href="/"
                  >Home</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/blog">Blog</a>
                </li>
                {{#if isLogin}}
                  <li class="nav-item ps-lg-4 py-2">
                    <a class="nav-link text-var-white" href="/add-blog">Add Blog</a>
                  </li>
                {{/if}}
                <li class="nav-item ps-lg-4 py-2">
                  <a
                    class="btn bg-transparent text-var-white border-var-white px-4"
                    href="/contact"
                  >Contact</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <!-- Navbar End -->

      <!-- Content Start -->

      <div class="container-fluid main-content bg-transparent">
        {{#if messages.success}}
        <div class="row">
          <div class="alert alert-success col-4 offset-4 mt-3" role="alert">
            {{messages.success}}
          </div>
        </div>
        {{/if}}

        <div
          class="container-sm-fluid container-lg d-lg-flex justify-content-lg-between"
        >

          <!-- Card -->

          <div
            id="profileCard" class="card bg-white-transparent-high col-lg-4 col-sm-12 my-5 shadow-lg p-3 rounded-3"
          >
            <img
              src="../public/img/leo.png"
              class="card-img-top rounded-3"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title text-var-blue fw-bold">Karunia Leo Gultom</h5>
              <p class="card-text text-var-gray">
                A professional young Website Developer who loves to code
                anywhere, anytime.
              </p>
            </div>
            <table class="table table-striped">
              <thead class="text-var-blue">
                <tr>
                  <th scope="col">#</th>
                  <th scope="col" colspan="2">Experience</th>
                  <th scope="col">Year</th>
                </tr>
              </thead>
              <tbody>
                {{#each exps}}
                <tr>
                  <th scope="row">{{this.id}}</th>
                  <td colspan="2">{{this.experience}}</td>
                  <td>{{this.year}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          <div
            class="text bg-transparent text-var-white col-lg-8 col-sm-12 my-5 p-lg-3 p-sm-1"
          >
            <div id="profileDesc" class="row">
              <div class="col-12">
                <h2 class="fw-bold text-var-white">What I do?</h2>
                <p>
                  We build you an Innovative, communicative and outstanding
                  sites that makes your business stands out between the others.
                  Company landing page? Websites for school Databases? Or even
                  just a personal portfolio websites? FULLY CUSTOMIZED User
                  Interface? No worries! We can afford what you need to enlarge
                  your business, to enlighten you, because we help you through
                  innovative website.
                </p>
              </div>
            </div>

            <div class="row">
              <div id="profileJS" class="col-lg-4 col-sm-12">
                <img src="../public/img/js.png" alt="Javascript" />
                <h5 class="my-3 fw-bold">Frontend Development</h5>
                <p>
                  We build your site with outstanding User Interface that will
                  bring your site stands out.
                </p>
              </div>
              <div id="profileGit" class="col-lg-4 col-sm-12">
                <img src="../public/img/git.png" alt="" />
                <h5 class="my-3 fw-bold">Version Control System</h5>
                <p>
                  We use github to keep your website updated, in-control,
                  seamlessly.
                </p>
              </div>
              <div id="profileDeploy" class="col-lg-4 col-sm-12">
                <img src="../public/img/deploy.png" alt="" />
                <h5 class="my-3 fw-bold">Automatic Deployment</h5>
                <p>
                  We deploy your site through Netlify, a very fast and
                  professional web hosting.
                </p>
              </div>
            </div>

            <hr />

            <div id="profileSocials" class="row social-section">
              <h2 class="fw-bold text-var-white my-3">Find Me on</h2>
              <ul
                class="nav ps-2 col-lg-6 col-sm-12 d-flex justify-content-between"
              >
                <li class="nav-item rounded-circle bg-white-transparent-low">
                  <a class="nav-link p-0" href="https://www.facebook.com/leo.karunia"><img
                      src="../public/img/facebook.png"
                      alt="facebook"
                      width="40"
                    /></a>
                </li>
                <li class="nav-item rounded-circle bg-white-transparent-low">
                  <a class="nav-link p-0" href="https://twitter.com/karunialeo"><img
                      src="../public/img/twitter.png"
                      alt="twitter"
                      width="40"
                    /></a>
                </li>
                <li class="nav-item rounded-circle bg-white-transparent-low">
                  <a class="nav-link p-0" href="https://www.instagram.com/karunialeo/"><img
                      src="../public/img/instagram.png"
                      alt="instagram"
                      width="40"
                    /></a>
                </li>
                <li class="nav-item rounded-circle bg-white-transparent-low">
                  <a class="nav-link p-0" href="karunialeo@gmail.com"><img
                      src="../public/img/mail.png"
                      alt="email"
                      width="40"
                    /></a>
                </li>
                <li class="nav-item rounded-circle bg-white-transparent-low">
                  <a class="nav-link p-0" href="https://wa.me/6282183738255"><img
                      src="../public/img/whatsapp.png"
                      alt="whatsapp.png"
                      width="40"
                    /></a>
                </li>
              </ul>
            </div>
          </div>

        </div>
      </div>

      <!-- Content End -->

      <!-- Footer -->

      <footer class="bg-transparent text-var-white text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3 fw-bold">
          &copy;
          <script>
            document.write(new Date().getFullYear());
          </script>
          |
          <a class="text-var-white text-decoration-none" href="/">Karunia Leo
            Gultom</a>
        </div>
        <!-- Copyright -->
      </footer>

      <!-- Footer End -->
      
    </div>

    
    <!-- Javascripts -->
    <script src="../public/js/animation.js"></script>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>