{{> header}}

<!-- Content Start -->

<div class="container-fluid main-content bg-transparent">
  <div
    class="container-sm-fluid container-lg d-lg-flex justify-content-center my-5"
  >
    <section class="container-fluid">
      <div class="row text-center mb-4">
        <h2 class="fw-bold text-var-white">Contact Me</h2>
      </div>

      <div class="row">
        <div class="col-lg-6 offset-lg-3 col-sm-12 text-var-white">
          <form>
            <div class="mb-3">
              <label
                for="name"
                class="form-label"
                data-bs-toggle="tooltip"
                data-bs-placement="right"
                title="Tooltip on right time"
              >Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                value="{{user.name}}"
                autofocus
                required
              />
            </div>

            <div class="row">
              <div class="col-6">
                <div class="mb-3">
                  <label for="name" class="form-label">Email</label>
                  <input
                    type="email"
                    class="form-control"
                    name="email"
                    id="email"
                    value="{{user.email}}"
                  />
                </div>
              </div>
              <div class="col-6">
                <div class="mb-3">
                  <label for="number" class="form-label">Phone</label>
                  <input
                    type="text"
                    class="form-control"
                    name="number"
                    id="number"
                    required
                  />
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label for="checkbox" class="form-label">Skill</label>
              <fieldset
                class="d-lg-flex justify-content-around d-sm-block"
                id="checkbox"
              >
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="skill"
                    id="html"
                    onclick="onlyOne(this)"
                    value="HTML"
                  />
                  <label class="form-check-label" for="html">HTML</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="skill"
                    id="css"
                    onclick="onlyOne(this)"
                    value="CSS"
                  />
                  <label class="form-check-label" for="css">CSS</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="skill"
                    id="js"
                    onclick="onlyOne(this)"
                    value="Javascript"
                  />
                  <label
                    class="form-check-label"
                    for="js"
                  >Javascript</label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="skill"
                    id="other"
                    onclick="onlyOne(this)"
                    value="Other"
                  />
                  <label
                    class="form-check-label"
                    for="other"
                  >Other</label>
                </div>
                <div>
                  <input
                    type="checkbox"
                    onclick="onlyOne(this)"
                    value=""
                    name="skill"
                    hidden
                    checked
                  />
                </div>
              </fieldset>
            </div>

            <div class="mb-3 subject">
              <label for="subject" class="form-label">
                Subject
              </label>
              <select class="form-select" name="subject" id="subject">
                <option class="text-var-gray" value="">Select Subject</option>
                <option
                  class="text-var-gray"
                  value="Privacy Police"
                >Privacy Police</option>
                <option
                  class="text-var-gray"
                  value="Problem With Our Site"
                >Problem With Our Site</option>
                <option
                  class="text-var-gray"
                  value="Questions On Order"
                >Questions On Order</option>
                <option
                  class="text-var-gray"
                  value="Other Questions"
                >Other Questions</option>
              </select>
            </div>

            <div class="form-floating mb-3">
              <textarea
                class="form-control"
                placeholder="Leave a comment here"
                name="message"
                id="message"
                style="height: 150px"
                required
              ></textarea>
              <label for="message" class="text-var-gray">Message</label>
            </div>

            <div class="submit-button">
              <button
                type="button"
                onclick="submitData()"
                class="btn bg-var-blue text-var-white"
              >Submit</button>
              <span id="form-redirect" class="ms-4 d-none">
                Redirecting . . .
              </span>
            </div>

          </form>
        </div>
      </div>

    </section>

  </div>
</div>

<!-- Content End -->

{{> footer}}