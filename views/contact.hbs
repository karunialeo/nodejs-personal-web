<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact | Karunia Leo Gultom</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Developer CSS -->
    <link rel="stylesheet" href="../public/css/main.css" />
    <link rel="stylesheet" href="../public/css/nav.css" />

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      href="../public/img/favicon.png"
      type="image/png"
    />
  </head>
  <body class="p-0">
    <div class="body-container container-fluid">
      <!-- Navbar Start -->

      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container">
          <a class="navbar-brand text-var-white h1" href="/">Karunia Leo Gultom</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
          >
            <div class="burger">
              <div class="line-1"></div>
              <div class="line-2"></div>
              <div class="line-3"></div>
            </div>
          </button>
          <div
            class="offcanvas offcanvas-start bg-blue-transparent"
            tabindex="-1"
            id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel"
          >
            <div class="offcanvas-header">
              <h5
                class="offcanvas-title text-var-white"
                id="offcanvasNavbarLabel"
              >Menu</h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1">
                {{#if isLogin}}
                <li class="nav-item ps-lg-4 py-2">
                  <span class="nav-link text-var-white">Hello, {{user.name}}!</span>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/logout">Logout</a>
                </li>
                {{else}}
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/register">Register</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/login">Login</a>
                </li>
                {{/if}}
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/">Home</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/blog">Blog</a>
                </li>
                {{#if isLogin}}
                  <li class="nav-item ps-lg-4 py-2">
                    <a class="nav-link text-var-white" href="/add-blog">Add Blog</a>
                  </li>
                {{/if}}
                <li class="nav-item ps-lg-4 py-2">
                  <a
                    class="btn bg-transparent text-var-white border-var-white px-4 active"
                    href="/contact"
                    aria-current="page"
                  >Contact</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <!-- Navbar End -->

      <!-- Content Start -->

      <div class="container-fluid main-content bg-transparent">
        <div
          class="container-sm-fluid container-lg d-lg-flex justify-content-center my-5"
        >
          <section class="container-fluid">
            <div class="row text-center mb-4">
              <h2 class="fw-bold text-var-white">Contact Me</h2>
            </div>

            <div class="row">
              <div class="col-lg-6 offset-lg-3 col-sm-12 text-var-white">
                <form>
                  <div class="mb-3">
                    <label
                      for="name"
                      class="form-label"
                      data-bs-toggle="tooltip"
                      data-bs-placement="right"
                      title="Tooltip on right time"
                    >Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="name"
                      value="{{user.name}}"
                      autofocus
                      required
                    />
                  </div>

                  <div class="row">
                    <div class="col-6">
                      <div class="mb-3">
                        <label for="name" class="form-label">Email</label>
                        <input
                          type="email"
                          class="form-control"
                          name="email"
                          id="email"
                          value="{{user.email}}"
                        />
                      </div>
                    </div>
                    <div class="col-6">
                      <div class="mb-3">
                        <label for="number" class="form-label">Phone</label>
                        <input
                          type="text"
                          class="form-control"
                          name="number"
                          id="number"
                          required
                        />
                      </div>
                    </div>
                  </div>

                  <div class="mb-3">
                    <label for="checkbox" class="form-label">Skill</label>
                    <fieldset
                      class="d-lg-flex justify-content-around d-sm-block"
                      id="checkbox"
                    >
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          name="skill"
                          id="html"
                          onclick="onlyOne(this)"
                          value="HTML"
                        />
                        <label class="form-check-label" for="html">HTML</label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          name="skill"
                          id="css"
                          onclick="onlyOne(this)"
                          value="CSS"
                        />
                        <label class="form-check-label" for="css">CSS</label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          name="skill"
                          id="js"
                          onclick="onlyOne(this)"
                          value="Javascript"
                        />
                        <label
                          class="form-check-label"
                          for="js"
                        >Javascript</label>
                      </div>
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          name="skill"
                          id="other"
                          onclick="onlyOne(this)"
                          value="Other"
                        />
                        <label
                          class="form-check-label"
                          for="other"
                        >Other</label>
                      </div>
                      <div>
                        <input
                          type="checkbox"
                          onclick="onlyOne(this)"
                          value=""
                          name="skill"
                          hidden
                          checked
                        />
                      </div>
                    </fieldset>
                  </div>

                  <div class="mb-3 subject">
                    <label for="subject" class="form-label">
                      Subject
                    </label>
                    <select class="form-select" name="subject" id="subject">
                      <option class="text-var-gray" value="">Select Subject</option>
                      <option
                        class="text-var-gray"
                        value="Privacy Police"
                      >Privacy Police</option>
                      <option
                        class="text-var-gray"
                        value="Problem With Our Site"
                      >Problem With Our Site</option>
                      <option
                        class="text-var-gray"
                        value="Questions On Order"
                      >Questions On Order</option>
                      <option
                        class="text-var-gray"
                        value="Other Questions"
                      >Other Questions</option>
                    </select>
                  </div>

                  <div class="form-floating mb-3">
                    <textarea
                      class="form-control"
                      placeholder="Leave a comment here"
                      name="message"
                      id="message"
                      style="height: 150px"
                      required
                    ></textarea>
                    <label for="message" class="text-var-gray">Message</label>
                  </div>

                  <div class="submit-button">
                    <button
                      type="button"
                      onclick="submitData()"
                      class="btn bg-var-blue text-var-white"
                    >Submit</button>
                    <span id="form-redirect" class="ms-4 d-none">
                      Redirecting . . .
                    </span>
                  </div>

                </form>
              </div>
            </div>

          </section>

        </div>
      </div>

      <!-- Content End -->

      <!-- Footer -->

      <footer class="bg-transparent text-var-white text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3 fw-bold">
          &copy;
          <script>
            document.write(new Date().getFullYear());
          </script>
          |
          <a class="text-var-white text-decoration-none" href="/">Karunia Leo
            Gultom</a>
        </div>
        <!-- Copyright -->
      </footer>

      <!-- Footer End -->
    </div>
    <!-- Modal -->

    <div
      class="modal fade"
      id="alertMessage"
      tabindex="-1"
      aria-labelledby="alertMessageLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="alertMessageLabel">Oops, sorry!</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Please fill all required fields.
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn bg-var-blue text-var-white"
              data-bs-dismiss="modal"
            >Close</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Javascripts -->
    <script src="../public/js/form.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>