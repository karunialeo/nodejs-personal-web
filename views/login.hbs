<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Karunia Leo Gultom</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Developer CSS -->
    <link rel="stylesheet" href="../public/css/main.css" />
    <link rel="stylesheet" href="../public/css/nav.css" />
    <link rel="stylesheet" href="../public/css/add-blog.css" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="../public/img/favicon.png" type="image/png" />
  </head>
  <body>
    <div class="body-container container-fluid">

      <!-- Navbar Start -->

      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container">
          <a class="navbar-brand text-var-white h1" href="/">Karunia Leo Gultom</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
          >
            <div class="burger">
              <div class="line-1"></div>
              <div class="line-2"></div>
              <div class="line-3"></div>
            </div>
          </button>
          <div
            class="offcanvas offcanvas-start bg-blue-transparent"
            tabindex="-1"
            id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel"
          >
            <div class="offcanvas-header">
              <h5
                class="offcanvas-title text-var-white"
                id="offcanvasNavbarLabel"
              >Menu</h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1">
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/register">Register</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white active" aria-current="page" href="/login">Login</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/">Home</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/blog">Blog</a>
                </li>
                {{#if isLogin}}
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/add-blog">Add Blog</a>
                </li>
                {{/if}}
                <li class="nav-item ps-lg-4 py-2">
                  <a
                    class="btn bg-transparent text-var-white border-var-white px-4"
                    href="/contact"
                  >Contact</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <!-- Navbar End -->

      <!-- Content Start -->

      <div
        class="container-fluid bg-transparent d-flex align-items-center justify-content-center"
      >
        <div class="container-form col-lg-4 col-md-6 col-sm-12 my-5">
          <h2 class="text-center text-var-white fw-bold">Login</h2>
          {{#if messages.danger}}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{messages.danger}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          {{/if}}
          <form class="mt-4 text-var-white" action="/login" method="POST">
            <div class="mb-3">
              <label for="inputEmail" class="form-label"
                >Email</label
              >
              <input name="inputEmail" type="email" class="form-control" id="inputEmail" autofocus/>
            </div>
            
            <div class="mb-3">
              <label for="inputPassword" class="form-label"
                >Password</label
              >
              <input name="inputPassword" type="password" class="form-control" id="inputPassword" />
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
              <button
                class="btn bg-success text-var-white fw-bold"
                type="submit"
              >
                Login
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Content End -->

      <!-- Footer -->

      <footer class="bg-transparent text-var-white text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3 fw-bold">
          &copy;
          <script>
            document.write(new Date().getFullYear());
          </script>
          |
          <a class="text-var-white text-decoration-none" href="/">Karunia Leo
            Gultom</a>
        </div>
        <!-- Copyright -->
      </footer>

      <!-- Footer End -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
