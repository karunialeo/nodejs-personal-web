{{> header}}

<!-- Content Start -->

<div
  class="container-fluid bg-transparent d-flex align-items-center justify-content-center"
>
  <div class="container-form col-lg-5 col-md-6 col-sm-12 my-5">
    <h2 class="text-center text-var-white fw-bold">Edit Blog</h2>
    <form id="editBlog" class="mt-4 text-var-white" action="/edit-blog/{{id}}" method="POST">
      <div class="mb-3">
        <label for="inputTitle" class="form-label"
          >Title</label
        >
        <input name="inputTitle" type="text" class="form-control" id="inputTitle" value="{{title}}" />
      </div>

      <div class="mb-3">
        <label for="inputContent" class="form-label"
          >Content</label
        >
        <textarea
          type="text"
          class="form-control"
          id="inputContent"
          rows="5"
          name="inputContent"
        >{{content}}</textarea>
      </div>

      <div class="mb-3">
        <label
          for="inputBlogImage"
          class="form-label"
        >
          Upload Image
        </label>
        <input
          class="form-control"
          type="file"
          id="inputBlogImage"
          name="inputBlogImage"
        />
      </div>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
          <a href="/blog" class="btn bg-var-white text-var-blue">Cancel</a>
        <button
          class="btn bg-var-blue text-var-white fw-bold"
          type="submit"
        >
          Confirm Changes
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Content End -->

{{> footer}}
