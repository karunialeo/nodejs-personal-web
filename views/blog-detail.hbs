<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Day 4 | Karunia Leo Gultom</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- Developer CSS -->
    <link rel="stylesheet" href="../public/css/main.css" />
    <link rel="stylesheet" href="../public/css/nav.css" />

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      href="../public/img/favicon.png"
      type="image/png"
    />
  </head>
  <body class="p-0">
    <div class="body-container container-fluid">
      <!-- Navbar Start -->

      <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
        <div class="container">
          <a class="navbar-brand text-var-white h1" href="/">Karunia Leo Gultom</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
          >
            <div class="burger">
              <div class="line-1"></div>
              <div class="line-2"></div>
              <div class="line-3"></div>
            </div>
          </button>
          <div
            class="offcanvas offcanvas-start bg-blue-transparent"
            tabindex="-1"
            id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel"
          >
            <div class="offcanvas-header">
              <h5
                class="offcanvas-title text-var-white"
                id="offcanvasNavbarLabel"
              >Menu</h5>
              <button
                type="button"
                class="btn-close btn-close-white"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1">
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/">Home</a>
                </li>
                <li class="nav-item ps-lg-4 py-2">
                  <a class="nav-link text-var-white" href="/blog">Blog</a>
                </li>
                {{#if isLogin}}
                  <li class="nav-item ps-lg-4 py-2">
                    <a class="nav-link text-var-white" href="/add-blog">Add Blog</a>
                  </li>
                {{/if}}
                <li class="nav-item ps-lg-4 py-2">
                  <a
                    class="btn bg-transparent text-var-white border-var-white px-4"
                    href="/contact"
                  >Contact</a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <!-- Navbar End -->

      <!-- Content Start -->

      <div class="container-fluid main-content bg-transparent">
        <div
          class="container-sm-fluid container-lg d-lg-flex justify-content-center my-5"
        >
          <!-- BLOG DETAILS -->

          <div class="blog-detail" id="blog-detail">
            <div class="text-var-white">
              <h1 class="fw-bold my-2">{{blog.title}}</h1>
              <div class="author mb-4">{{blog.postAt}} | {{blog.author}}</div>
              <img
                src="../public/img/blog-img-detail.png"
                alt="detail"
              />
              <p class="mt-4">
                {{blog.content}}
              </p>
            </div>
          </div>

          <!-- Blog End -->

        </div>
      </div>

      <!-- Content End -->

      <!-- Footer -->

      <footer class="bg-transparent text-var-white text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3 fw-bold">
          &copy;
          <script>
            document.write(new Date().getFullYear());
          </script>
          |
          <a class="text-var-white text-decoration-none" href="/">Karunia Leo
            Gultom</a>
        </div>
        <!-- Copyright -->
      </footer>

      <!-- Footer End -->
    </div>

    <!-- Javascripts -->
    <script src="../public/js/form.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>